{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2015",
    "module": "commonjs",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": ["src/ts/**/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/ts/**/*.test.ts"]
}
